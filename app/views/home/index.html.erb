<div id="container" class="container-fluid fontClass home">

  <%= form_tag users_path,  class: "col-md-3 col-md-push-8 hidden-sm hidden-xs", role: "form" do %>

    <div class="form-group">
      <%= text_field_tag :username, nil, class: "form-control", placeholder: "Nombre de Usuario" %>
      
    </div>
    <div class="form-group">
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Correo Electrónico"%>
      
    </div>
    <div class="form-group">
      <%= password_field_tag :password, nil, class: "form-control", placeholder: "Contraseña" %>
      
    </div>
    <div class="form-group">
      <%= password_field_tag :password_confirmation, nil, class: "form-control", placeholder: "Confirmar contraseña"%>
      
    </div>
    <div class="form-group">
      <%= text_field_tag :sexo, nil, class: "form-control", placeholder: "Sexo"%>

    </div>
    <div class="form-group">

      <%= date_field_tag :fecha_nac, nil, placeholder: "dd/mm/aaaa" %>
    </div>


    <div class="actions"><%= submit_tag %></div>

  <% end %>

</div>




