<%= simple_form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Formulario invalido</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form role="form">
  <div class="form-group">
    <%= f.input_field :username, class: "form-control", placeholder: "Nombre de Usuario" %>
    
  </div>
  <div class="form-group">
    <%= f.input_field :email, class: "form-control", placeholder: "Correo Electrónico"%>
    
  </div>
  <div class="form-group">
    <%= f.input_field :password, class: "form-control", placeholder: "Contraseña" %>
    
  </div>
  <div class="form-group">
    <%= f.input_field :password_confirmation, class: "form-control", placeholder: "Confirmar contraseña"%>
    
  </div>
  <div class="form-group">
    <%= f.input_field :sexo, class: "form-control", placeholder: "Sexo"%>

  </div>
  <div class="form-group">
    <%= f.label :fecha_nac, placeholder: "fecha de nacimiento"%>
    <%= f.input :fecha_nac%>
  </div>


  <div class="actions"><%= f.submit %></div>
<% end %>